#!/bin/bash

set -e

printUsage() {
	echo "Usage: $(basename "$0") OPTIONS [DELAY]" >&2
	echo "" >&2
	echo "  Takes a screenshot after DELAY secons (default is 0 seconds)" >&2
	echo "" >&2
	echo "OPTIONS" >&2
	echo "  -p  --no-edit   Don't start gimp to edit the screenshot" >&2
	echo "  -n  --publish   Publish the screenshot using pub" >&2
	echo "  -h  --help      Display this message" >&2
	exit ${1:-1}
}


SLEEP="0"
PUB="false"
EDIT="true"

while [ "$#" -gt "0" ] ; do
	case "$1" in
		"-p"|"--pub"|"--publish")
			PUB="true"
			shift
		;;
		"-n"|"--noedit"|"--no-edit")
			EDIT="false"
			shift
		;;
		"-h"|"--help")
			printUsage 0
			# exit
		;;
		*)
			SLEEP="$1"
			break
		;;
	esac
done


if [ "$#" -gt "0" ] ; do
	echo "Unknown arguments $@" >&2
	printUsage
	# exit
done

sleep "$SLEEP"

# Input
FILE="$(mktemp -t "$(basename "$0")"-XXXXXXXXXX.png)"
import -window root "$FILE"

# Processing
if $EDIT ; then
	gimp "$FILE"
fi

# Output
if $PUB ; then
	pub -a "$FILE"
else
	echo "$FILE"
fi
