set morespace
set fill 1048576
set const
set nonewlines
set softwrap
set tabsize 4

## Syntax highlighting for GIT commit messages
syntax "gitcommit" ".git/(COMMIT|TAG)_EDITMSG$"

color brightblue "#.*"

color brightwhite "^# (Changes|Untracked).*:$"

color white "^#	.*"
color brightyellow "^#	modified: .*"
color brightred "^#	deleted: .*"
color brightgreen "^#	new file: .*"

color brightblue "^#"
